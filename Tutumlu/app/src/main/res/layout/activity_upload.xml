<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

  <include layout="@layout/header"
      android:id="@+id/hdr_upload"
      />

    <include layout="@layout/market_name_field"
        android:id="@+id/market_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hdr_upload"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/btn_upload"
      android:layout_below="@id/market_name_info">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:id="@+id/ll_product"/>

  </ScrollView>

  <include layout="@layout/upload_button"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_alignParentBottom="true"
      android:id="@id/btn_upload"/>

  </RelativeLayout>